generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  username String @unique 
  email String
  img String @default("https://wallpapers-clan.com/wp-content/uploads/2023/02/anime-boy-black-pfp-1.jpg")
  password String
  posts Post[]
}

model Post{
  id String @id @default(uuid())
  post String
  img String
  like Boolean @default(false)
  comment Comment[]
  user User @relation(fields: [userId],references: [id])
  userId String

}

model Comment{
  id String @id @default(uuid())
  comment String
  post Post @relation(fields: [postId],references: [id])
  postId String
}